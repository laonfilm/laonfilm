---
// src/layouts/Page.astro
import Site from "./Site.astro";
const { title } = Astro.props;
---

<Site title={title}>
  <article class="page-container">
    <slot />
  </article>
</Site>

<style>
  .page-container {
    max-width: 720px;
    margin: 0 auto;
    /* Remove padding since Site.astro now handles it */
  }
</style>
