---
// src/layouts/Site.astro
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "../styles/base.css"; // ✅ import from src/styles (bundled, hashed)
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <!-- DNS prefetch for analytics -->
    <link rel="dns-prefetch" href="//gc.zgo.at">
    
    <!-- Font preloading to reduce critical path latency -->
    <link rel="preload" href="/fonts/special-elite.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- Critical CSS inlined to prevent render blocking -->
    <style>
      /* Critical styles only - navigation, layout, typography basics */
      :root{
        --bg: #EBD7A3;
        --text: #2A2A2A;
        --head: #6B4226;
        --link: #B7410E;
        --link-h: #CC5500;
        --accent: #B7410E;
        --accent-2: #556B2F;
        --container: 1120px;
        --space-1: .25rem;
        --space-2: .5rem;
        --space-3: .75rem;
        --space-4: 1rem;
        --space-6: 1.5rem;
        --space-8: 2rem;
        --radius: 6px;
      }
      
      /* Self-hosted Special Elite font - critical for text rendering */
      @font-face {
        font-family: 'Special Elite';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('/fonts/special-elite.woff2') format('woff2'),
             url('/fonts/special-elite.ttf') format('truetype');
      }
      
      * { box-sizing: border-box; }
      
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      
      body{
        background: var(--bg);
        color: var(--text);
        font-family: "Special Elite", "Courier New", Courier, monospace;
        line-height: 1.5;
        font-size: 17px;
        display: grid;
        grid-template-rows: auto 1fr auto;
        min-height: 100svh;
        overflow-x: hidden;
      }
      
      /* Typography basics */
      h1,h2,h3 {
        color: var(--text);
        margin: 0 0 var(--space-4);
      }
      
      p { margin: 0 0 var(--space-4); }
      strong, b { color: var(--accent); font-weight: 700; }
      
      a {
        color: var(--link);
        text-decoration: underline;
        text-decoration-thickness: 1px;
        text-underline-offset: 2px;
      }
      
      a:hover { color: var(--link-h); }
      
      /* Layout basics */
      .site-header{
        position: static;
        top: 0;
        background: var(--bg);
      }
      
      /* Navigation critical styles */
      .nav-wrapper {
        position: relative;
        background: var(--bg);
      }
      
      .nav {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        column-gap: 1rem;
        max-width: var(--container);
        margin: 0 auto;
      }
      
      .nav-border {
        width: 100%;
        height: 2px;
        background-image: 
          linear-gradient(90deg, 
            var(--text) 0px, var(--text) 4px, 
            transparent 4px, transparent 10px,
            var(--text) 10px, var(--text) 13px,
            transparent 13px, transparent 18px,
            var(--text) 18px, var(--text) 22px,
            transparent 22px, transparent 27px,
            var(--text) 27px, var(--text) 30px,
            transparent 30px, transparent 36px
          );
        background-size: 36px 2px;
        background-repeat: repeat-x;
        opacity: 0.7;
      }
      
      .brandline {
        display: flex;
        align-items: center;
        flex: 1 1 auto;
        min-width: 0;
      }
      
      .brand {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        color: var(--text);
        font-weight: 700;
        font-size: 1.35rem;
        letter-spacing: .5px;
        white-space: nowrap;
      }
      
      .logo {
        height: 40px;
        width: auto;
        margin-right: 0.4rem;
      }
      
      .links {
        display: flex;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
        flex-shrink: 0;
      }
      
      .nav .links a {
        text-decoration: none;
        color: var(--text);
        opacity: 0.85;
        transition: color 0.2s ease, opacity 0.2s ease, text-decoration 0.2s ease;
      }
      
      .nav .links a:hover {
        color: var(--accent);
        opacity: 1;
        text-decoration: underline;
      }
      
      /* Hide mobile menu elements on desktop */
      .menu-toggle { display: none; }
      .menu-btn { display: none; }
      
      /* Main content layout */
      .main-content {
        max-width: var(--container);
        margin: 0 auto;
        padding: 2rem 2rem var(--space-8) 2rem;
      }
      
      /* Basic grid for homepage */
      .grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px,1fr));
        gap: var(--space-6);
      }
      
      .card{
        display: block;
        text-decoration: none;
        transition: transform .15s ease;
        will-change: transform;
        position: relative;
      }
      
      .card:focus-visible { 
        outline: 2px dashed var(--link); 
        outline-offset: 3px; 
      }
      
      .card img{
        width: 100%;
        height: auto;
        display: block;
        filter: drop-shadow(0 2px 6px rgba(0,0,0,.15));
      }
      
      /* Mobile critical styles */
      @media (max-width: 768px) {
        .grid {
          grid-template-columns: repeat(2, 1fr);
          gap: var(--space-5);
        }
      }
      
      @media (max-width: 720px) {
        .logo { height: 36px; }
        .menu-btn { 
          display: inline-block;
          font-family: "Special Elite","Courier New",Courier,monospace;
          font-size: 1.25rem;
          cursor: pointer;
          user-select: none;
          padding: .25rem .5rem;
          line-height: 1;
        }
        
        .links {
          display: none;
          position: absolute;
          top: 100%;
          left: 0;
          right: 0;
          height: auto;
          background: var(--bg);
          padding: 0.75rem 1rem 1.5rem;
          flex-direction: column;
          align-items: flex-end;
          gap: .6rem;
          width: 100%;
          z-index: 1000;
          box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }
        
        .menu-toggle:checked ~ .links { display: flex; }
        
        .main-content {
          padding: 1.5rem 1.5rem var(--space-8) 1.5rem;
        }
      }
      
      @media (max-width: 480px) {
        .grid {
          grid-template-columns: repeat(2, 1fr);
          gap: var(--space-4);
        }
        
        .main-content {
          padding: 1rem 1rem var(--space-6) 1rem;
        }
      }
    </style>
    
    <!-- Load non-critical CSS asynchronously after critical render -->
    <noscript><link rel="stylesheet" href="/styles/base.css"></noscript>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title && title !== "LAonFilm" ? `${title} · LAonFilm` : "LAonFilm"}</title>

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/laonfilm-icon-48.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/laonfilm-icon-64.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/laonfilm-icon-192.png" />
    <link rel="icon" type="image/png" sizes="256x256" href="/laonfilm-icon-256.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/laonfilm-icon-512.png" />

<meta name="description" content="A love letter to Los Angeles, written on instant film with a vintage Hasselblad 500cm camera" />
<meta name="keywords" content="Los Angeles photography, instant film, Hasselblad, LA locations, analog photography" />
<meta property="og:title" content={title && title !== "LAonFilm" ? `${title} · LAonFilm` : "LAonFilm"} />
<meta property="og:description" content="Documenting LA's historical, kitschy, fun, and beautiful places on Instax Square film" />
<meta property="og:image" content="https://laonfilm.com/laonfilm-icon-512.png" />
<meta property="og:url" content="https://laonfilm.com" />
<meta name="twitter:card" content="summary_large_image" />

<link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <header class="site-header"><Nav /></header>
    <main class="main-content">
      <slot />
    </main>
    <Footer /> 

    <!-- Optimized GoatCounter - loads after user interaction -->
    <script>
      let analyticsLoaded = false;
      function loadAnalytics() {
        if (analyticsLoaded) return;
        analyticsLoaded = true;
        const script = document.createElement('script');
        script.src = '//gc.zgo.at/count.js';
        script.setAttribute('data-goatcounter', 'https://laonfilm.goatcounter.com/count');
        script.async = true;
        document.head.appendChild(script);
      }
      
      // Load on first user interaction
      ['click', 'scroll', 'keydown', 'touchstart'].forEach(event => {
        document.addEventListener(event, loadAnalytics, { once: true, passive: true });
      });
      
      // Fallback: load after 3 seconds if no interaction
      setTimeout(loadAnalytics, 3000);
    </script>
  </body>
</html>

<style>
  .main-content {
    max-width: var(--container);
    margin: 0 auto;
    /* Added consistent top padding to match index.astro and [slug].astro */
    padding: 2rem 2rem var(--space-8) 2rem;
  }

  /* Tablet */
  @media (max-width: 768px) {
    .main-content {
      padding: 1.5rem 1.5rem var(--space-8) 1.5rem;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .main-content {
      padding: 1rem 1rem var(--space-6) 1rem;
    }
  }
</style>
