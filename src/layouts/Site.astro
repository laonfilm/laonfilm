---
// src/layouts/Site.astro
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "../styles/base.css"; // ✅ import from src/styles (bundled, hashed)
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} · LAonFilm` : "LAonFilm"}</title>

    <!-- Keep Google Font via link for best performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Special+Elite&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header"><Nav /></header>
    <main class="main-content">
      <slot />
    </main>
    <Footer /> 

    <!-- GoatCounter tracking -->
    <script data-goatcounter="https://laonfilm.goatcounter.com/count"
            async src="//gc.zgo.at/count.js"></script>
  </body>
</html>

<style>
  .main-content {
    max-width: var(--container);
    margin: 0 auto;
    /* Added consistent top padding to match index.astro and [slug].astro */
    padding: 2rem 2rem var(--space-8) 2rem;
  }

  /* Tablet */
  @media (max-width: 768px) {
    .main-content {
      padding: 1.5rem 1.5rem var(--space-8) 1.5rem;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .main-content {
      padding: 1rem 1rem var(--space-6) 1rem;
    }
  }
</style>
