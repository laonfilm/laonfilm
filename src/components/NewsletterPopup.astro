/* Mobile adjustments */
  @media (max-width: 480px) {
    .index-card {
      width: 95%;
      padding: 20px;
      margin: 16px;
      max-width: none;
    }
    
    .card-header {
      margin-bottom: 20px;
    }
    
    .card-number {
      font-size: 0.65rem;
    }
    
    .line-group {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
      margin-bottom: 16px;
    }
    
    .field-label {
      min-width: auto;
      font-size: 0.7rem;
    }
    
    /* Ensure form maintains same alignment as other line groups */
    #newsletter-form {
      width: 100%;
    }
    
    #newsletter-form .line-group {
      width: 100%;
    }