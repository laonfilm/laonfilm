<script>
  window.showNewsletterPopup = () => {
    document.getElementById('newsletter-popup').style.display = 'flex';
    // Set today's date
    const today = new Date().toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: '2-digit', 
      day: '2-digit' 
    });
    document.querySelector('.auto-date').textContent = today;
  };
  
  window.closePopup = () => {
    document.getElementById('newsletter-popup').style.display = 'none';
    // Reset form and status
    document.getElementById('newsletter-form').reset();
    document.querySelectorAll('input[name="name"]')[0].value = '';
    document.getElementById('message').style.display = 'none';
    document.getElementById('status-text').textContent = 'PENDING';
  };

  // Close on outside click - more reliable version
  document.addEventListener('click', (e) => {
    const popup = document.getElementById('newsletter-popup');
    const card = document.querySelector('.index-card');
    
    if (popup && popup.style.display === 'flex') {
      if (e.target === popup || (!card.contains(e.target) && popup.contains(e.target))) {
        closePopup();
      }
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && document.getElementById('newsletter-popup').style.display === 'flex') {
      closePopup();
    }
  });

  document.getElementById('newsletter-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    
    // Add the name field value to the form data
    const nameInput = document.querySelector('input[name="name"]');
    if (nameInput.value) {
      formData.append('name', nameInput.value);
    }
    
    const statusText = document.getElementById('status-text');
    const submitBtn = e.target.querySelector('button[type="submit"]');
    
    // Update status to processing
    statusText.textContent = 'PROCESSING...';
    submitBtn.disabled = true;
    submitBtn.textContent = 'FILING...';
    
    try {
      const response = await fetch('/api/newsletter', { method: 'POST', body: formData });
      const result = await response.json();
      
      const message = document.getElementById('message');
      message.textContent = result.message;
      message.className = `card-message ${result.success ? 'success' : 'error'}`;
      message.style.display = 'block';

      if (result.success) {
        statusText.textContent = 'FILED âœ“';
        setTimeout(() => closePopup(), 3000);
      } else {
        statusText.textContent = 'ERROR';
      }
    } catch (error) {
      document.getElementById('message').textContent = 'Filing error occurred';
      document.getElementById('message').className = 'card-message error';
      document.getElementById('message').style.display = 'block';
      statusText.textContent = 'ERROR';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'FILE';
    }
  });
</script>