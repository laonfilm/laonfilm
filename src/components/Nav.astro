---
const siteTitle = "LAonFilm";
const tagline = "a love letter to Los Angeles";
---
<nav class="nav">
  <!-- Left: logo + title + – + tagline -->
  <div class="brandline">
    <a href="/" class="brand" aria-label="LAonFilm home">
      <img src="/images/LAonFilm.png" alt="LAonFilm logo" class="logo" />
      <span class="title">{siteTitle}</span>
    </a>
    <span class="separator">–</span>
    <span class="tagline">{tagline}</span>
  </div>

  <!-- Right: hamburger (typewriter vibe) -->
  <input id="menu-toggle" type="checkbox" class="menu-toggle" aria-hidden="true" />
  <label for="menu-toggle" class="menu-btn" aria-label="Toggle menu">&&&</label>

  <!-- Nav links -->
  <ul class="links">
    <li><a href="/tagged/food">Food</a></li>
    <li><a href="/tagged/drink">Drink</a></li>
    <li><a href="/tagged/culture">Culture</a></li>
    <li><a href="/tagged/views">Views</a></li>
    <li><a href="/tagged/dispatches">Dispatches</a></li>
    <li><a href="/search">Search</a></li>
  </ul>
</nav>

<style>
/* ====== Bar container ====== */
.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 1rem;
  border-bottom: 1px dashed var(--text); /* full-width rule */
  column-gap: 1rem;
}

/* ====== Left cluster: brand + tagline ====== */
.brandline {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex: 1 1 auto; /* lets the brand push links / burger to the right */
  min-width: 0;
}

.brand {
  display: inline-flex;
  align-items: center;
  text-decoration: none;     /* brand link not underlined */
  color: var(--text);
  font-weight: 700;
  font-size: 1.35rem;
  letter-spacing: .5px;
  white-space: nowrap;
}

.logo {
  height: 36px;              /* bigger logo across views */
  width: auto;
  margin-right: 0.4rem;
}

.separator { opacity: 0.6; }

.tagline {
  font-size: 0.95rem;
  color: var(--text);
  opacity: 0.75;
  letter-spacing: .3px;
  margin-left: .1rem;
  white-space: nowrap;
}

/* ====== Right cluster: links + hamburger ====== */
.links {
  display: flex;
  gap: 1rem;
  list-style: none;
  margin: 0;
  padding: 0;
  align-items: center;
  flex-shrink: 0;
}

/* Header link visuals are unified in base.css:
   - no underline by default; underline + accent on hover */

/* Hamburger (checkbox hack) */
.menu-toggle { display: none; } /* hidden input */

.menu-btn {
  display: none; /* visible only on small screens */
  font-family: "Special Elite","Courier New",Courier,monospace;
  font-size: 1.25rem;
  cursor: pointer;
  user-select: none;
  padding: .25rem .5rem;
  line-height: 1;
}

/* ====== Mobile behavior ====== */
@media (max-width: 720px) {
  .tagline { display: none; }      /* keep bar tidy on phones */
  .logo { height: 32px; }          /* still larger than before */

  /* Show the hamburger on the right of the top bar */
  .menu-btn { display: inline-block; }

  /* Collapse links by default */
  .links {
    display: none;
    width: 100%;
    flex-direction: column;
    align-items: flex-start;
    gap: .5rem;
    margin-top: .5rem;
    padding-top: .5rem;
    border-top: 1px dashed var(--text);
  }

  /* When toggled, reveal links below the bar */
  .menu-toggle:checked ~ .links { display: flex; }
}
</style>
