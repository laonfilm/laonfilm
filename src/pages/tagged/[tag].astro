---
export async function getStaticPaths() {
  // Add/remove tags here as your site grows.
  const tags = ["food", "drink", "culture", "views", "dispatches"];
  return tags.map(tag => ({ params: { tag } }));
}

const { tag } = Astro.params;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>#{tag} — LAonFilm</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles/base.css" />
  </head>
  <body>
    <main class="container" style="max-width: 960px;">
      <h1 style="text-transform: capitalize; margin-bottom: .75rem;">{tag}</h1>
      <p style="opacity:.75; margin-top:0;">Posts tagged “{tag}”.</p>

      <!-- Placeholder grid until you render real posts by tag -->
      <section class="polaroid-grid" style="margin-top:1.25rem;">
        <div style="border:1px dashed rgba(0,0,0,.25); padding:1rem; background:rgba(0,0,0,.03);">
          Coming soon: grid of Polaroids for “{tag}”.
        </div>
      </section>
    </main>
  </body>
</html>
